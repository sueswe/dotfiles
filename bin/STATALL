#!/bin/bash

LOGFILE="${HOME}/STATALL.log"
date > ${LOGFILE}
echo "
STATALL, Version 0.6"
echo "Use: 'STATALL --help' for some infos."
echo -e "\033[1;32mLogfile: ${LOGFILE}\e[0m"
echo ""

function usage {
  echo -e "Usage: $(basename $0) \e[36m [gc|get|br|--source for@bar]\e[0m \n"
  echo ""
  echo "* Clone from a remote filelist:"
  echo "   $(basename $0) --source user@remote:/foo/projects.ist"
  echo ""
  echo "* Check localy:"
  echo "   gc  = run garbagecollector"
  echo "   get = git pull <remote> master"
  echo "   br  = show branches"
  echo ""
  # echo "$(basename $0) checks only .git - directories."
  echo ""
}

function clonewar {
  source=$1
  echo "Clone from: $source"
  scp $source .
  projectList=$(basename $source)
  remote=$(dirname $source)
  echo "loop through $projectList"
  for r in $(cat $projectList); do
    git clone $remote/$r || {
      echo "Ups, that didn't work. "
    }
  done
  exit 1
}


function pullOtherBranches {
  liste=$(git branch --no-color | sed 's/ //g' | sed 's/*//g')
  for branchName in ${liste}; do
    echo -e " · checking out ${branchName} ... \c"
    git checkout ${branchName} &>> $LOGFILE
    if [[ $? -ne 0 ]]; then
      echo -e "\033[1;31mFAIL\e[0m"
    else
      echo -e "\e[0;32m✓\e[0m"
      echo -e " · pull ${branchName} ... \c"
      git pull origin ${branchName} &>> $LOGFILE
      if [[ $? -ne 0 ]]; then
        echo -e "\e[1;35mfailed!\e[0m"
        # echo "--------------------------------------------------"
        # git pull origin ${branchName}
        # echo "--------------------------------------------------"
      else
        echo -e "\e[0;32m✓\e[0m"
      fi
    fi
  done
}

reposToPush=""
changesOpen=""

if [[ $1 == "--source" ]]; then
  shift
  clonewar $@
fi

if [[ "$1" == "--help" || "$1" == "-?" ]]; then
  usage
  exit 1
fi

#######################################################################
#
# MAIN LOOP
#
#######################################################################
C=0
for n in $(ls -d */); do
  C=$(expr $C + 1)
  echo -e "\n[$C] # Checking \e[1;36m$n\e[0m (master) ... "
  cd $n

  if [[ ! -d ".git" ]]; then
    echo -e "\e[1;33m · skipped.\e[0m (not a git-repo) "
    cd ..
    continue
  fi




  # for remote in $(git remote)
  for remote in "origin"
  do
    #echo -e "\n\e[4;32mUsing remote: $(git remote -v |grep fetch | grep $remote) \e[0m"
    echo "
     · remote: $(git remote -v |grep fetch | grep $remote)" || tee -a ${LOGFILE}
    #echo -e "Checking out master ... "
    #git checkout master &> /dev/null || {
    #  echo -e "\e[1;31mCannot change branch to master\e[0m"
    #  # exit 3
    #}
    git fetch $remote -p &> /dev/null || {
      echo -e "\e[1;31m · Problem open connection!\e[0m"
      continue
    }
    # if [ "$1" == "b" ]; then echo -e "\n\e[33mBRANCHES:\e[0m\n"; git branch -av; echo -e "\t\t\t\t\tSTATE: \c"; fi

    git status | grep clean &> /dev/null
    if [ $? -ne 0 ]; then
      #echo -e "\t_________________________________"
      echo -e "\e[1;31m · Changes open\e[0m , please commit them first!\n"
      git status | grep modif #&> /dev/null
      #echo -e "_________________________________"
      changesOpen="${changesOpen} $n"
      echo ""
      #exit 1
    else
      if [[ "$1" == "gc" ]]; then
        echo -e "\033[0;34m ✑ performing a gc ... \e[0m\c"
        git gc &>> ${LOGFILE} || {
          exit 66
        }
        echo "✓"
        echo -e "\033[0;34m ✑ performing a fsck ... \e[0m\c"
        git fsck &>> ${LOGFILE} || {
          exit 66
        }
        echo "✓"
        sleep 1
      elif [[ "$1" == "get" ]]; then
        pullOtherBranches
        sleep 3
      fi

      to_push=$(git status | grep -E 'git push')
      if [[ ! -z $to_push ]]; then
        echo -e "\e[33m · You can push ↑ some changes.\e[0m ($(git status | grep -i ahead))"
        reposToPush="${reposToPush} $n"
      fi
      to_pull=$(git status | grep -E 'git pull')
      if [[ ! -z $to_pull ]]; then
        echo -e "\e[32m · You can pull ↓ some changes.\e[0m"
      fi

      if [[ "$1" == "br" ]]; then
        echo "branches _without_ master:"
        echo -e "\e[1;35m"
        git branch -a | grep -v master
        echo -e "\e[0m"
      fi
    fi
  done

  #YOUR=$(git status | grep -i your | wc -l)
  #if [ $YOUR -ne 0 ]; then
  #    echo $n
  #    git status
  #    #echo ""
  #fi

  cd ..
  echo " "
done
echo ""
echo "$C repositories OK."
echo ""
if [[ ! -z $reposToPush ]]; then
  echo -e "* Repos you could \e[1;36mpush\e[0m: $reposToPush"
fi

if [[ ! -z $changesOpen ]]; then
  echo -e "* \e[1;35mChanges open\e[0m:       $changesOpen"
fi
